# Cloudflare API Configuration
CLOUDFLARE_API_TOKEN=your_api_token_here

# Certificate Configuration
CERTBOT_EMAIL=your_email@example.com
CERTBOT_STAGING=false  # Set to true for testing

# Domain Configuration (comma-separated)
DOMAINS=example.com,*.example.com,subdomain.example.com

# Certificate Renewal Configuration
RENEWAL_INTERVAL_DAYS=30
RENEWAL_CHECK_INTERVAL_HOURS=12

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=certificate_manager.log 